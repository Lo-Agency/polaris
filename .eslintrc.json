{
	"env": {
		"browser": true,
		"amd": true,
		"node": true,
		"es6": true 
	},
	"extends": [
		"eslint:recommended",
		"plugin:react/recommended",
		"plugin:prettier/recommended"
	],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"react"
	],
	"rules": {
		"react/prop-types": "off",
		"react/react-in-jsx-scope": "off",
		"prettier/prettier": [
			"error"
		],
		"arrow-body-style": "off",
		"prefer-arrow-callback": "off"
	}
}